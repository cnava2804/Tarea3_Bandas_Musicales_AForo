@model IEnumerable<Tarea3_Bandas_Musicales.Models.Bandas_Musicales>

@{
    ViewData["Title"] = "Bandas Musicales";
}
<h2>Bandas Musicales</h2>
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Bandas Musicales</a>
        </li>
    </ol>
</nav>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://rockandblog.net/wp-content/uploads/2020/10/acdc-hasta-el-infinito.jpg" class="d-block w-100" alt="imagen1">
        </div>
        <div class="carousel-item">
            <img src="https://www.tranvias.uy/images/web/Musica/Freddie_Mercury/a2-Queen.jpg" class="d-block w-100" alt="imagen2">
        </div>
        <div class="carousel-item">
            <img src="https://i0.wp.com/hipersonica.com/wp-content/uploads/2021/05/Coldplay.jpg?fit=2560%2C1440&ssl=1" class="d-block w-100" alt="imagen3">
        </div>
        <div class="carousel-item">
            <img src="https://indiehoy.com/wp-content/uploads/2020/09/guns-n-roses.jpg" class="d-block w-100" alt="imagen4">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<br />

<p>
    <a asp-action="Create" class="btn btn-success">Agregar</a>

</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BandaM_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.BandaM_Name)</td>
                
                <td>
                    <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.BandaM_Id">Editar</a>
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.BandaM_Id">Detalles</a>
                    <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.BandaM_Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
