@model Tarea3_Bandas_Musicales.Models.Bandas_Musicales

@{
    ViewData["Title"] = "Nueva Banda";
}

<h2>Agregar</h2>
<hr />
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Bandas Musicales</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Agregar</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BandaM_Name" class="control-label"></label>
                <input asp-for="BandaM_Name" class="form-control" />
                <span asp-validation-for="BandaM_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BandaM_Musical_Genre" class="control-label"></label>
                <input asp-for="BandaM_Musical_Genre" class="form-control" />
                <span asp-validation-for="BandaM_Musical_Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BandaM_YearOfCreation" class="control-label"></label>
                <input asp-for="BandaM_YearOfCreation" class="form-control" />
                <span asp-validation-for="BandaM_YearOfCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BandaM_Country" class="control-label"></label>
                <input asp-for="BandaM_Country" class="form-control"/>
                <span asp-validation-for="BandaM_Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}